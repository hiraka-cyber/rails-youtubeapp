<div class="text-right">
<%= link_to 'New', new_movie_path ,class:'btn btn-outline-dark'%>
</div>
<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-3">
     <div class="card mt-2">
      <div class="card-img-top">
       <iframe id="<%= movie.title %>" title="<%= movie.title %>" width="100%" height="100%" src="<%= movie.img.url %>"></iframe>
      </div>
      <div class="card-body">
       <%= movie.title %><br><%= movie.user.username %>-<%= link_to 'Read More',movie_path(movie) %>
      </div>
      </div>
    </div>
  <% end %>
</div>
  
